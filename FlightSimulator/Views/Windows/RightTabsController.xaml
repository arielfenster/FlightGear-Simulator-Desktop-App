<UserControl x:Class="FlightSimulator.Views.Windows.RightTabsController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="500" Margin="10,10,0,0" VerticalAlignment="Top" Width="776">
            <TabItem Header="Manual">
                <local:ManualControl x:Name="manualControl"></local:ManualControl>
            </TabItem>
            <TabItem Header="Auto">
                <local:AutoControl x:Name="autoControl"></local:AutoControl>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
